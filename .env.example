# Servidor
PORT=3000
NODE_ENV=development

# SFTP Configuration (usando servidor público de prueba)
SFTP_HOST=test.rebex.net
SFTP_USER=demo
SFTP_PASSWORD=password
SFTP_PORT=22

# Cron Schedule (3:00 AM Argentina time)
SYNC_CRON_SCHEDULE=0 3 * * *

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=99999

# Timezone
TZ=America/Argentina/Buenos_Aires

# Paths
TEMP_DIR=./temp
LOGS_DIR=./logs

# SFTP Download Settings
SFTP_REMOTE_PATH=/
SFTP_FILE_PATTERN=*.sql
SFTP_TIMEOUT=30000

# Configuración de WooCommerce
# Agrega estas variables a tu archivo .env para habilitar la integración con WooCommerce

# URL de tu tienda WooCommerce (sin barra final)
WOOCOMMERCE_URL=url

# Consumer Key de la API de WooCommerce
# Se obtiene en: WooCommerce > Configuración > API > Claves
WOOCOMMERCE_CONSUMER_KEY=key

# Consumer Secret de la API de WooCommerce  
# Se obtiene en: WooCommerce > Configuración > API > Claves
WOOCOMMERCE_CONSUMER_SECRET=secret

# Versión de la API de WooCommerce (opcional, por defecto wc/v3)
WOOCOMMERCE_VERSION=wc/v3