# Servidor
PORT=3000
NODE_ENV=development

# FTP Configuration
FTP_HOST=ftp.example.com
FTP_USER=username
FTP_PASSWORD=password
FTP_PORT=21
FTP_SECURE=false

# Cron Schedule (3:00 AM Argentina time)
SYNC_CRON_SCHEDULE=0 3 * * *

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Timezone
TZ=America/Argentina/Buenos_Aires

# Paths
TEMP_DIR=./temp
LOGS_DIR=./logs